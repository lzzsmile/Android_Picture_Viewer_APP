<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        tools:src="@drawable/art_clear"
        />

    <TextView
        android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#000000"
        android:background="@drawable/back"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:paddingStart="@dimen/textview_margin_left"
        android:paddingLeft="@dimen/textview_margin_left"
        android:paddingRight="@dimen/textview_margin_right"
        android:paddingEnd="@dimen/textview_margin_right"
        tools:text="caption of the picture"
        />

</LinearLayout>